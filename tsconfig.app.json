{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@directives/*": ["./src/directive/*"],
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/assets/styles/*"]
    }
  }
}
